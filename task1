//~~
//  Задание 1.
//  Написать программу, которая заменяет все четные числа в целочисленном статическом массиве на 0. (массив из 10 элементов)
//~~

#include <iostream>

int main()
{
	const int n = 10;
	int a[n];

	std::cout << "Enter array: \n";    //ввод массива
	for (int i = 0; i < n; i++)
		std::cin >> a[i];

	for (int i = 0; i < n; i++)        //цикл заменяющий чётные числа на 0
		if (a[i] % 2 == 0)               //проверяет делится ли число на 2 без остатка
			a[i] = 0;

	std::cout << "Edited array: \n";   //вывод массива
	for (int i = 0; i < n; i++)
		std::cout << "a[" << i << "] = " << a[i] << std::endl;

	return 0;
}
